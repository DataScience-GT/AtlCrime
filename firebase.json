{
  "database": {
    "rules": "firebase/database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**", 
      "**/firebase", 
      "**/data"
    ]
  },
  "storage": {
    "rules": "firebase/storage.rules"
  }
}
